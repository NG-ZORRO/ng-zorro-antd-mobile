{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "declaration": true,
    "outDir": "./dist"
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
